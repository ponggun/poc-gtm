@model GTMDemo.Models.NewsletterSubscription
@{
    ViewData["Title"] = "หน้าแรก";
}

<div class="container">
    <!-- Header with headline and description -->
    <section class="text-center py-5">
        <h1 class="display-4 fw-bold">บริการติดตามประสิทธิภาพการตลาดออนไลน์</h1>
        <p class="lead text-muted mt-4">ระบบการวิเคราะห์และติดตามข้อมูลการตลาดดิจิทัลอย่างครบวงจร เพื่อให้คุณได้ผลลัพธ์ที่ดีที่สุด</p>
        
        <!-- CTA button -->
        <div class="mt-5">
            <a id="main-cta-button" href="#newsletter" class="btn btn-primary btn-lg px-5 py-3 fw-bold">สนใจทดลองใช้เลย!</a>
        </div>
    </section>

    <!-- Feature bullet list -->
    <section id="features" class="py-5">
        <h2 class="mb-4 text-center">คุณสมบัติเด่น</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">ติดตามการคลิก</h5>
                        <p class="card-text">วิเคราะห์พฤติกรรมการคลิกของผู้ใช้บนเว็บไซต์ของคุณอย่างละเอียด</p>
                        <button id="feature1-btn" class="btn btn-outline-primary">เรียนรู้เพิ่มเติม</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">จัดการแคมเปญ</h5>
                        <p class="card-text">บริหารแคมเปญการตลาดได้อย่างมีประสิทธิภาพด้วยข้อมูลเชิงลึก</p>
                        <button id="feature2-btn" class="btn btn-outline-primary">เรียนรู้เพิ่มเติม</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">รายงานครบถ้วน</h5>
                        <p class="card-text">ดูรายงานข้อมูลที่ครบถ้วนสมบูรณ์และปรับแต่งได้ตามความต้องการ</p>
                        <button id="feature3-btn" class="btn btn-outline-primary">เรียนรู้เพิ่มเติม</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter subscription form -->
    <section id="newsletter" class="py-5 bg-light rounded-3">
        <div class="container py-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h2 class="text-center mb-4">สมัครรับข่าวสาร</h2>
                    
                    @if (TempData["SubscriptionMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SubscriptionMessage"]
                        </div>
                    }

                    <form asp-action="SubscribeNewsletter" method="post" id="newsletter-form">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="subscribe-btn">สมัครรับข่าวสาร</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
